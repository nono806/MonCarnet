<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_saisie_glycemie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amarchai.moncarnetdesuivi.SaisieGlycemie">

    <TextView
        android:text="HH:MM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="32dp"
        android:id="@+id/txtDateHeure" />

    <TextView
        android:text="999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDateHeure"
        android:layout_alignStart="@+id/txtDateHeure"
        android:layout_marginTop="19dp"
        android:id="@+id/txtTauxGlycemie" />

    <CheckBox
        android:text="Nourriture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTauxGlycemie"
        android:layout_alignParentStart="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="20dp"
        android:id="@+id/chkNourriture" />

    <CheckBox
        android:text="Insuline rapide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkNourriture"
        android:layout_alignStart="@+id/chkNourriture"
        android:layout_marginTop="23dp"
        android:id="@+id/chkInsulineRapide" />

    <CheckBox
        android:text="Insuline lente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkInsulineRapide"
        android:layout_alignStart="@+id/chkInsulineRapide"
        android:layout_marginTop="16dp"
        android:id="@+id/chkInsulineLente" />

    <CheckBox
        android:text="ActivitÃ©"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/chkActivite"
        android:layout_below="@+id/chkInsulineLente"
        android:layout_alignStart="@+id/chkInsulineLente" />

</RelativeLayout>
